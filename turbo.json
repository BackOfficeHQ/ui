{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "dependsOn": ["^build"]
    },
    "publish-packages": {
      "cache": false,
      "dependsOn": ["build"]
    },
    "start": {
      "cache": false
    },
    "lint": {
      "outputs": []
    }
  }
}
